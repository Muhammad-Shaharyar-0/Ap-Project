<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="./bootstrap-4/css/bootstrap.min.css">
    <link rel="stylesheet" href="./fontawesome/css/all.min.css">
    <link rel="stylesheet" href="./css/selectTheme.css"> 
    
    <title>Select Theme</title>
</head>
<body id="themeBg" >
<!--Featured venues-->
<div class="container">
    <div class="row">
        <div class="col-12 col-lg-4 col-xl-4 col-md-4 text-center back">
        <a href="home.html" class="backbtn"> <i class="fas fa-chevron-left" style="margin-right: 10px;">  </i>         Back Home</a>
        </div>
        <div class="col-12 col-lg-5 col-xl-5 col-md-5 venue mt-3 ">
            <p class="title" style="font-size: 13px; margin-bottom: 0px;">VENUE</p>
            <h4 class="text-center">{{venue.Name}}</h4>
            <p class="subTitle">{{venue.Address}}</p>
        </div>
    </div>
    <hr style="width: 79% !important">
</div>



{{#if Themes}}
<div class="container" >
    <div class="row h-100 justify-content-center">
        <div class="col-2 col-lg-2 my-auto selectThemep">
            <p >Theme</p>
        </div>
        {{#each  Themes}}
        <div class="col-5 col-lg-3">
            <div class="Cards"> 
                <div class="card-body">
                    <img src="images/ninja.png" alt="">
                    <label class="card-title">{{this.Name}}</label>
                </div>
                <img class="card-img-top" src="{{this.Image}}" alt="">
            </div>
        </div>
        {{/each}}
    </div>
</div>




<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-2 col-lg-2  selectThemep">
            <p >Price</p>
        </div>
    {{#each  Themes}}
        <div class="col-5 col-lg-3">
            <div class="form-group  mb-2">
                <input readonly type="password" class="form-control" id="inputPassword2" placeholder={{this.Price}}>
            </div>
            <hr class="myhr">
        </div>       
{{/each}}
    </div>
        
</div>

    <!--2nd-->


<div class="container mt-4">
    <div class="row justify-content-center ">
        <div class="col-2 col-lg-2 selectThemep">
            <p>Length</p>
        </div>
        {{#each  Themes}}
        <div class="col-5 col-lg-3">
            <div class="form-group mb-2">
                <input readonly type="password" class="form-control" id="inputPassword2" placeholder={{this.Length}}>
            </div>
            <hr class="myhr">
        </div>
         {{/each}}                 
    </div>
            
</div>

    <!--3rd-->

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-2 col-lg-2  selectThemep">
            <p >Included</p>
        </div>
        {{#each  Themes}}
        <div class="col-5 col-lg-3">
            <div class="form-group  mb-2">
                <textarea readonly  class="form-control " rows="5" id="comment" placeholder='{{this.Included}}'></textarea>
        </div>
        <hr class="myhr">
        </div>
        {{/each}}
    </div>
            
</div>

    <!--4th-->

    <div class="container mt-4">
        <div class="row justify-content-center ">
            <div class="col-2 col-lg-2  selectThemep">
                <p >Not Included</p>
            </div>
            {{#each  Themes}}
            <div class="col-5 col-lg-3">
                <div class="form-group  mb-2">
                    <input readonly type="password" class="form-control" id="inputPassword2" placeholder='{{this.NotIncluded}}'>
                </div>
                <hr class="myhr">
            </div>
            
                    {{/each}}
        </div>
            
    </div>

    <!--5th-->

    <div class="container mt-4">
        <div class="row justify-content-center ">
            <div class="col-2 col-lg-2  selectThemep">
                <p >Min Age</p>
            </div>
            {{#each  Themes}}
            <div class="col-5 col-lg-3">
                <div class="form-group  mb-2">
                    <input readonly type="password" class="form-control" id="inputPassword2" placeholder={{this.MinAge}}>
                </div>
                <hr class="myhr">
            </div>
{{/each}}
        </div>
            
    </div>
    
    <!--6th-->

    <div class="container mt-4">
            <div class="row justify-content-center">
                <div class="col-2 col-lg-2  selectThemep">
                    <p >Max Participants</p>
                </div>
               {{#each  Themes}}
                <div class="col-5 col-lg-3">
                <div class="form-group  mb-2">
                    <input readonly type="password" class="form-control" id="inputPassword2" placeholder={{this.MaxParticipants}}>
                </div>
                <hr class="myhr">
                </div>
       {{/each}}
                
            
            
        </div>
    </div>
       
    <!--7th-->

    <div class="container mt-4">
        <div class="row justify-content-center mb-5 ml-5">
    
             {{#each  Themes}} 
            <div class="col-5 col-lg-3 ml-3">
  
                               <a href="/AddTheme/{{this.Name}}" class="themebtn pt-2 pb-2 btn-block text-center ml-5">SELECT THEME</a>
               
            </div>
                 {{/each}}
            </div>
            
        </div>
{{/if}}
<div class="container mt-4">
        <div class="row justify-content-center mb-5 ml-5">
    
            <div class="col-5 col-lg-3 ml-3">
  
                  <a href="/hostTheme/{{venue.Name}}" class="themebtn pt-2 pb-2 btn-block text-center ml-5">Go Back</a>
               
            </div>
            </div>
        </div>
    <script src="./jquery/jquery-3.4.0.min.js"></script>
    <script src="./js/popper.min.js"></script> 
    <script src="./bootstrap-4/js/bootstrap.min.js"></script>
</body>
</html>